{% extends 'base.html.twig' %}

{% block title %}{{ 'title.reset_password' | trans }}{% endblock %}

{% block body %}

    <div class="row justify-content-center mt-4 mb-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">{{ 'title.reset_password' | trans }}</div>

                <div class="card-body">

                    {% if status=='success' %}
                        <div class="alert alert-success" role="alert">
                            {{ 'message.emailed_reset_link'|trans }}
                        </div>
                    {% endif %}

                    <form method="POST">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('password_reset') }}">
                        <div class="form-group row">
                            <label for="email" class="col-md-4 col-form-label text-md-right">
                                {{ 'label.email'|trans }}
                            </label>

                            <div class="col-md-6">
                                <input id="email" type="email"
                                       class="form-control {% if status=='error' %}is-invalid{% endif %}"
                                       placeholder="{{ 'placeholder.enter_email'|trans }}" name="email" value=""
                                       required
                                       autocomplete="email" autofocus>
                                {% if status=='error' %}
                                    <span class="invalid-feedback" role="alert">
                                        <strong>{{ 'message.user_not_found'|trans }}</strong>
                                    </span>
                                {% endif %}

                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'action.send_reset_link'|trans }}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
