<div class="card mb-3">
    <h5 class="card-header">{{ 'widget.search' | trans }}</h5>
    <div class="card-body">
        <form action="{{ path('property_search') }}" method="get">
            <div class="form-group">
                <label>{{ 'city'|trans }}</label>
                <select name="city" class="form-control form-control-lg">

                    <option value="0">{{ 'widget.all_cities'|trans }}</option>

                    {% for city in site.cities %}

                        <option value="{{ city.id }}">{{ city.name }}</option>

                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label>{{ 'deal_type'|trans }}</label>
                <select name="dealType" class="form-control form-control-lg">
                    <option value="0">{{ 'widget.all_deal_types'|trans }}</option>

                    {% for deal_type in site.deal_types %}

                        <option value="{{ deal_type.id }}">{{ deal_type.name }}</option>

                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <label>{{ 'category'|trans }}</label>
                <select name="category" class="form-control form-control-lg">
                    <option value="0">{{ 'widget.all_categories'|trans }}</option>

                    {% for category in site.categories %}

                        <option value="{{ category.id }}">{{ category.name }}</option>

                    {% endfor %}
                </select>
            </div>

            <div class="form-group">
                <button class="btn btn-block btn-lg btn-primary">
                    <i class="fas fa-search"></i> {{ 'action.search'|trans }}
                </button>
            </div>
        </form>
    </div>
</div>
