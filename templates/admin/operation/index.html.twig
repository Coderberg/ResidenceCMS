{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'operations'|trans }}{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-gavel text-danger"></i> {{ 'operations'|trans }}
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_operation_new') }}">
                <i class="fas fa-plus-square text-danger"></i> {{ 'title.add_operation' | trans }}
            </a>
        </li>
    </ul>

    <div class="card mb-3">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.operation_name' | trans }}</th>
                        <th>{{ 'table.slug' | trans }}</th>
                        <th>{{ 'table.action' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for operation in operations %}
                        <tr>
                            <td>{{ operation.name }}</td>
                            <td>{{ operation.slug }}</td>
                            <td>
                                {{ include('admin/operation/_action_form.html.twig', {operation: operation}, with_context = false) }}
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td>{{ 'no_items_found' | trans }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
