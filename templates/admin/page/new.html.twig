{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'title.add_page' | trans }}{% endblock %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header"><i class="fas fa-home text-danger"></i> {{ 'title.add_page' | trans }}</div>
        <div class="card-body">

            {{ form_start(form) }}

            <div class="form-group" id="name">
                {{ form_row(form.title) }}
            </div>

            <div class="form-group">
                {{ form_row(form.description) }}
            </div>

            <div class="form-group" id="slug">
                {{ form_row(form.slug) }}
            </div>

            <div class="form-group mb-3 custom-control custom-switch">
                {{ form_widget(form.show_in_menu) }}
                {{ form_label(form.show_in_menu) }}
            </div>

            <div class="form-group">
                {{ form_row(form.content) }}
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    {{ 'label.create_page' | trans }}
                </button>

            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('js/slugger') }}

{% endblock %}
