{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'title.edit_page' | trans }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('libs/summernote/0.8.20/summernote-bs4.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header"><i class="fas fa-edit text-danger"></i> {{ 'title.edit_page' | trans }}</div>
        <div class="card-body">

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.title) }}
            </div>

            <div class="form-group">
                {{ form_row(form.description) }}
            </div>

            <div class="form-group">
                {{ form_row(form.slug) }}
            </div>

            <div class="form-group">
                {{ form_row(form.locale) }}
            </div>

            <div class="form-group mb-3 custom-control custom-switch d-none">
                {{ form_widget(form.show_in_menu) }}
                {{ form_label(form.show_in_menu) }}
            </div>

            <div class="form-group mb-3 custom-control custom-switch">
                {{ form_widget(form.add_contact_form) }}
                {{ form_label(form.add_contact_form) }}
            </div>

            <div class="form-group" id="email-address" style="display: none">
                {{ form_row(form.contact_email_address) }}
            </div>

            <div class="form-group">
                {{ form_row(form.content) }}
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    {{ 'action.save' | trans }}
                </button>

            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('js/page') }}

    <script src="{{ asset('libs/summernote/0.8.20/summernote-bs4.min.js') }}"></script>

{% endblock %}
