{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'categories'|trans }}{% endblock %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header"><i class="far fa-building"></i> {{ 'categories'|trans }}</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.category_name' | trans }}</th>
                        <th>{{ 'table.slug' | trans }}</th>
                        <th>{{ 'table.action' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td>{{ category.slug }}</td>
                            <td>
                                {{ include('admin/category/_action_form.html.twig', {category: category}, with_context = false) }}
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td>{{ 'no_items_found' | trans }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

