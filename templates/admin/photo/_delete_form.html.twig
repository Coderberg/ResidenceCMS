<form action="{{ url('admin_photo_delete', {id: photo.id, property_id: property_id }) }}" method="post"
      data-confirmation="true">

    <input type="hidden" name="token" value="{{ csrf_token('delete') }}"/>

    <button class="btn btn-danger btn-sm remove"
            onclick="if(confirm('{{ 'confirmation.delete_photo' | trans }}')){ return true }else{ return false }">
        <!--<i class="fas fa-trash-alt"></i>--> {{ 'action.delete' | trans }}
    </button>

</form>
