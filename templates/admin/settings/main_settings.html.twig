{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'title.settings' | trans }}{% endblock %}

{% block body %}

    {{ include('admin/settings/partials/_nav_tabs.html.twig') }}

    <div class="card mb-3">
        <div class="card-body">

            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.name) }}
            </div>

            <div class="form-group">
                {{ form_row(form.title) }}
            </div>

            <div class="form-group">
                {{ form_row(form.meta_title) }}
            </div>

            <div class="form-group">
                {{ form_row(form.meta_description) }}
            </div>

            <div class="form-group">
                {{ form_row(form.custom_code) }}
            </div>

            <div class="form-group">
                {{ form_row(form.custom_footer_text) }}
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.currency) }}

                    <div class="small edit-link">
                        <a class="ml-2" href="{{ path('admin_currency') }}">
                            {{ 'action.edit'|trans }} {{ 'currencies'|trans }}
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.items_per_page) }}
                </div>
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.show_similar_properties) }}
                </div>

                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.fixed_top_navbar) }}
                </div>
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.show_language_selector) }}
                </div>
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.anyone_can_register) }}
                </div>

                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.show_bottom_bar) }}
                </div>
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    {{ form_row(form.allow_html) }}
                </div>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    {{ 'action.save'|trans }}
                </button>

            </div>

            {{ form_end(form) }}

        </div>
    </div><br>

{% endblock %}
