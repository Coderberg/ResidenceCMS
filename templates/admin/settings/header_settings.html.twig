{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'title.settings.header_settings' | trans }}{% endblock %}

{% block stylesheets %}

    {{ encore_entry_link_tags('css/photo') }}

{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_settings') }}">
                <i class="fas fa-edit text-danger"></i> {{ 'title.settings' | trans }}
            </a>
        </li>
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-image text-danger"></i> {{ 'title.settings.header_settings' | trans }}
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_map_settings') }}">
                <i class="fas fa-map-marker-alt text-danger"></i> {{ 'title.settings.map_settings' | trans }}
            </a>
        </li>
    </ul>

    <div class="card mb-3">
        <div class="card-body">
            {% include 'admin/settings/partials/_header_settings_form.html.twig' with {
                formType: 'logo_image',
                formTitle: 'title.settings.logo_image_label'|trans,
                formImage: logo_image,
                formPath: path('admin_setting_upload_logo_image'),
                formDeletePath: path('admin_setting_delete_logo_image')
            } %}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            {% include 'admin/settings/partials/_header_settings_form.html.twig' with {
                formType: 'header_image',
                formTitle: 'title.settings.header_image_label'|trans,
                formImage: header_image,
                formPath: path('admin_setting_upload_header_image'),
                formDeletePath: path('admin_setting_delete_header_image')
            } %}
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">

            {{ include('admin/settings/partials/_filter_settings_form.html.twig') }}

        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('js/settings') }}

{% endblock %}
