{% extends 'admin/layout/base.html.twig' %}

{% block title %}{{ 'deal_types'|trans }}{% endblock %}

{% block body %}

    <ul class="nav nav-tabs">
        <li class="nav-item active">
            <span class="nav-link active">
                <i class="fas fa-gavel text-danger"></i> {{ 'deal_types'|trans }}
            </span>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('admin_deal_type_new') }}">
                <i class="fas fa-plus-square text-danger"></i> {{ 'label.create_deal_type'|trans }}
            </a>
        </li>
    </ul>

    <div class="card mb-3">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table" style="background-color: #FFFFFF">
                    <thead class="thead">
                    <tr>
                        <th>{{ 'table.deal_type' | trans }}</th>
                        <th>{{ 'table.slug' | trans }}</th>
                        <th>{{ 'table.action' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for deal_type in dealTypes %}
                        <tr>
                            <td>{{ deal_type.name }}</td>
                            <td>{{ deal_type.slug }}</td>
                            <td>
                                {{ include('admin/deal_type/_action_form.html.twig', {deal_type: deal_type}, with_context = false) }}
                            </td>
                        </tr>

                    {% else %}
                        <tr>
                            <td>{{ 'no_items_found' | trans }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
