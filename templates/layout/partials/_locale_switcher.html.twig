{% set route = app.request.attributes.get('_route') %}
{% set route_params = app.request.attributes.get('_route_params') %}
{% set params = route_params|merge(app.request.query.all) %}

<li class="nav-item dropdown{% if noArrow is defined and noArrow %} no-arrow{% endif %}">
    <a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button"
       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{ app.request.locale|locale_name(app.request.locale)|u.title }}
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
        {% for locale in locales|split('|') %}
            {% if locale is not same as(app.request.locale) %}
                <a class="dropdown-item" href="{% if route == 'default_route' %}/{{ locale }}{% else %}{{ path(route, params|merge({ _locale: locale })) }}{% endif %}">
                    {{ locale|locale_name(locale)|u.title }}
                </a>
            {% endif %}
        {% endfor %}
    </div>
</li>
